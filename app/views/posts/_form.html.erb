<div class="container">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<h1><%= form_title %></h1>		
			<% if @post.errors.any? %>
			  <div class="alert alert-danger">
			    <ul>
			    <% @post.errors.full_messages.each do |msg| %>
			      <li><%= msg %></li>
			    <% end %>
			    </ul>
			  </div>
			<% end %>			

			<%= form_for @post do |f| %>
				<div class="form-group">
					<%=  f.text_field :titulo, class: "form-control input-lg", placeholder: "Ingresa el titulo del post" %>
				</div>
				<div class="form-group">
					<%=  f.text_area :cuerpo, class: "form-control input-lg", placeholder: "Ingresa el cuerpo del post" %>
				</div>
				<div>
					<%= f.submit form_title, class: "btn btn-primary btn-lg" %> <%= link_to "Cancelar", posts_path, class: "btn btn-primary btn-lg" %>
				</div>	
			<% end %>
		</div>
	</div>
</div>