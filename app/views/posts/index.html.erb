<div class="container">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <% @posts.each do |post| %>
                <div class="post">
                	<div class="post-title">
                		<%= post.titulo %>                		
                	</div>
                	<span>Publicado por: <%= post.user.email %> hace alrededor de <%= time_ago_in_words post.created_at %> </span>
                	<div class="body">
                		<%= post.cuerpo %>
                	</div>
                </div>
            <% end %>
        </div> 
    </div> <!-- .row-->
</div> <!-- .container -->


