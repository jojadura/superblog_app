<!DOCTYPE html>
<html>
<head>
  <title>SuperblogApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
</head>
<body>
    <!-- Header  -->
   <header>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button><!-- .navbar-toggle -->
          <a class="navbar-brand" href="">
            <label>Super Blog</label>
          </a>
        </div>


        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>                            
               <li><%= link_to "Nuevo Post", new_post_path %></li>
               <li><%= link_to 'Salir', destroy_user_session_path, method: :delete %></li>
            <% else %>
               <li><%= link_to "Ingresar", new_user_session_path %></li>
               <li><%= link_to "Registrarse", new_user_registration_path %></li>
            <% end %>   
          </ul>
        </div><!-- .collapse -->        

       </div> <!-- .container -->
    </nav>
  </header>
    <!-- End Header  -->

<%= yield %>
</body>
</html>
