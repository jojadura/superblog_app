<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-2">
      <h2>Iniciar Sesión</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, "Correo" %><br />
          <%= f.email_field :email, placeholder: "Correo", autofocus: true, class: "form-control input-lg" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Contraseña" %><br />
          <%= f.password_field :password, placeholder: "Contraseña", autocomplete: "off", class: "form-control input-lg" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div> <!-- .row-->
</div> <!-- .container-->